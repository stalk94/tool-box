{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // ✅ нужно для Next (а не CommonJS)
    "jsx": "preserve", // ✅ preserve JSX, Next сам обработает
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // ✅ важно для Next — он сам билдит
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@bloc/*": [
        "src/bloc/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@system/*": [
        "src/app/*"
      ],
      "@lib/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app",
    "components",
    "lib",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
